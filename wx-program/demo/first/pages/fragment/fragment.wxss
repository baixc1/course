/*swiper*/  
.swiper-box {  
  display: block;  
  width: 100%;  
  overflow: hidden;  
}  
.hot-box {  
  display: block;  
  height: 100%;  
  font-family: Helvetica;  
}  
.themes-list {  
  font-size: 14px;  
  color: #444;  
  height: 20px;  
  line-height: 20px;  
  padding:16px 20px;
  border-bottom:1px solid #f2f2f2;
}  
/*tab*/  
.swiper-tab {  
  display: flex;
}  
.swiper-tab-list {  
  flex: auto;
  padding: 2rpx 0;
}  
.swiper-tab-list view{
  width:  100%;
  height: 50rpx;
  background: no-repeat center;
  background-size: 23px;
  text-align: center;
  font-size: 30rpx;
}
.active {  
  color: #FFCC00;  
}  