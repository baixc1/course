
<view class="left">
  <block wx:for="{{list}}">
    <image wx:if="{{index%2 == 0}}" class="img" mode="widthFix" src="{{item.url}}" bindtap="tap"></image>
  </block>
</view>
<view class="right">
  <block wx:for="{{list}}">
      <image wx:if="{{index%2 == 1}}" class="img" mode="widthFix" src="{{item.url}}" bindtap="tap"></image>
  </block>
</view>